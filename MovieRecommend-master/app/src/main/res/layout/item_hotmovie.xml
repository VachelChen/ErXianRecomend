<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/movieClassifyTextView"
            android:text="电影分类"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/movieMore"
            android:text="更多"
            android:textColor="@color/colorLightGreen"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="185dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/movieImageView1"
            android:src="@mipmap/image1"
            android:layout_width="wrap_content"
            android:layout_height="150dp" />
            <TextView
                android:id="@+id/movieNameTv1"
                android:text="电影名称"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seenMovieTextView1"
                android:text="12345人看过"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/movieImageView2"
                android:src="@mipmap/image2"
                android:layout_width="wrap_content"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/movieNameTv2"
                android:text="电影名称"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seenMovieTextView2"
                android:text="12345人看过"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/movieImageView3"
                android:src="@mipmap/image3"
                android:layout_width="wrap_content"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/movieNameTv3"
                android:text="电影名称"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seenMovieTextView3"
                android:text="12345人看过"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>