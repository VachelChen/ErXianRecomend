<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_start_material"
    android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_start_material"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/nickImageView"
        android:src="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp" />
<LinearLayout
    android:id="@+id/mLinearLayout"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="50dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nickNameTextView"
        android:layout_marginLeft="5dp"
        android:text="我是小白"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/userMemberTextView"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:text="黄金会员"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <TextView
        android:id="@+id/commentsTextView"
        android:layout_marginTop="5dp"
        android:layout_below="@id/mLinearLayout"
        android:layout_marginLeft="50dp"
        android:maxEms="250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timeTextView"
        android:text="2015-01-09"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        />
</RelativeLayout>